    </div>
    <style>
        @@keyframes slideIn {
            from { opacity: 0; transform: translateX(100%); }
            to { opacity: 1; transform: translateX(0); }
        }
    </style>
    <script>
        setTimeout(() => {
            const toast = document.querySelector('[style*="fixed"]');
            if (toast) {
                toast.style.opacity = '0';
                setTimeout(() => toast.remove(), 300);
            }
        }, 4000);
    </script>
}

