                        const sideRaw = map['side'];
                        const side = (sideRaw === 0 || sideRaw === 'Buy' || sideRaw === 'LONG') ? 'LONG' : 'SHORT';
                        const qty = map['size'] ?? map['quantity'] ?? 0;
                        const entryPrice = map['entryprice'] ?? map['entryPrice'] ?? 0;
