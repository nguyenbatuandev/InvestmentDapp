@model InvestDapp.Shared.Models.CampaignPost
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Pages/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Keep page styles minimal and rely on global layout variables */
        .post-page-container { max-width: 1100px; margin: calc(var(--header-h,72px) + 32px) auto 64px; padding: 0 18px; }
        .article-container { max-width: 880px; margin: 0 auto; }

        .article-header { text-align: left; margin-bottom: 18px; }
        .post-type-badge { display:inline-flex; align-items:center; gap:8px; padding:6px 12px; border-radius:999px; font-weight:800; font-size:.85rem; text-transform:uppercase }
        .post-type-introduction { color: var(--primary-2); }
        .post-type-update { color: var(--primary-2); }
        .post-type-milestone { color: var(--warning); }
        .post-type-announcement { color: var(--muted); }

        .article-title { font-size:2.1rem; font-weight:900; margin:10px 0 8px; color:var(--fg); }
        .article-meta { display:flex; gap:.75rem; align-items:center; color:var(--muted); font-weight:700; flex-wrap:wrap }
        .author-avatar{ width:30px;height:30px;border-radius:50%;background:var(--primary-2);color:#04121b;display:flex;align-items:center;justify-content:center;font-weight:900 }

        .article-featured-image{ margin:18px 0 20px; border-radius:12px; overflow:hidden; background:var(--card); border:1px solid var(--border); box-shadow:var(--shadow) }
        .article-featured-image img{ width:100%; height:auto; display:block; object-fit:cover }

        .campaign-info{ background:var(--card); border:1px solid var(--border); border-radius:var(--radius); padding:16px; margin-bottom:18px }
        .campaign-info h4{ margin:0 0 8px; color:var(--primary-2); font-weight:900 }
        .campaign-link{ color:var(--fg); font-weight:800 }

        .article-content{ background:var(--card); border:1px solid var(--border); padding:20px; border-radius:var(--radius); color:var(--fg); box-shadow:var(--shadow); line-height:1.75 }
        .article-content h1,.article-content h2,.article-content h3{ color:var(--fg); margin-top:1.6rem; margin-bottom:.8rem; padding-bottom:.3rem; border-bottom:1px solid var(--border); font-weight:900 }
        .article-content pre{ background:var(--glass); border:1px solid var(--border); padding:12px; border-radius:8px; overflow:auto }
        .article-content code{ background:var(--glass); padding:2px 6px; border-radius:4px; color:var(--primary-2) }
        .article-content img{ max-width:100%; height:auto; display:block }

        .tags-section{ margin-top:18px; }
        .tag{ background: color-mix(in oklab, var(--primary-2) 14%, transparent); color:var(--primary-2); padding:6px 12px; border-radius:999px; font-weight:800 }

        /* footer: share actions + back link */
        .article-footer{
            margin-top:28px; padding-top:18px; border-top:1px solid var(--border);
            display:flex; justify-content:space-between; gap:18px; align-items:center; flex-wrap:wrap
        }

        .share-links{ display:flex; align-items:center; gap:10px; color:var(--muted); font-weight:700 }
        .share-label{ margin-right:6px; color:var(--muted); font-weight:800 }

        .share-btn{ display:inline-flex; align-items:center; justify-content:center; width:38px; height:38px; border-radius:50%;
            background:var(--card); border:1px solid var(--border); color:var(--muted); text-decoration:none; transition:all .12s ease; font-size:16px }
        .share-btn:hover{ transform:translateY(-3px); color:var(--primary); border-color:color-mix(in oklab,var(--primary-2) 40%, var(--border)); box-shadow:0 8px 30px rgba(0,170,255,.06) }

        .share-btn.copy { position:relative }

        .back-to-blog{ display:inline-flex; align-items:center; gap:8px; padding:10px 14px; border-radius:10px; font-weight:800; text-decoration:none;
            background:var(--glass); border:1px solid var(--border); color:var(--fg) }
        .back-to-blog:hover{ transform:translateY(-2px); border-color:var(--primary-2); color:var(--primary-2) }

        @@media (max-width:768px){ .article-footer{ flex-direction:column; align-items:flex-start; gap:12px } }

        @@media (max-width:768px){ .post-page-container{ margin-top: calc(var(--header-h,72px) + 18px); padding:12px } .article-title{ font-size:1.6rem } .article-footer{ flex-direction:column; gap:10px } }

        @@keyframes slideInUp { from{ opacity:0; transform:translateY(12px) } to{ opacity:1; transform:none } }
    </style>
}

<main class="post-page-container">
    <article class="article-container">
        <header class="article-header">
            @switch (Model.PostType)
            {
                case InvestDapp.Shared.Enums.PostType.Introduction:
                    <span class="post-type-badge post-type-introduction">
                        <i class="fas fa-info-circle"></i> Giới thiệu
                    </span>
                    break;
                case InvestDapp.Shared.Enums.PostType.Update:
                    <span class="post-type-badge post-type-update">
                        <i class="fas fa-sync"></i> Cập nhật
                    </span>
                    break;
                case InvestDapp.Shared.Enums.PostType.Achievement:
                    <span class="post-type-badge post-type-milestone">
                        <i class="fas fa-trophy"></i> Thành tựu
                    </span>
                    break;
                case InvestDapp.Shared.Enums.PostType.Announcement:
                    <span class="post-type-badge post-type-announcement">
                        <i class="fas fa-bullhorn"></i> Thông báo
                    </span>
                    break;
            }

            @if (Model.IsFeatured)
            {
                <span class="featured-indicator">
                    <i class="fas fa-star"></i> Bài viết nổi bật
                </span>
            }

            @if (User.IsInRole("Admin") || Model.AuthorAddress == User.FindFirst("WalletAddress")?.Value)
            {
                @switch (Model.ApprovalStatus)
                {
                    case InvestDapp.Shared.Enums.ApprovalStatus.Approved:
                        <span class="approval-status status-approved">
                            <i class="fas fa-check-circle"></i> Đã duyệt
                        </span>
                        break;
                    case InvestDapp.Shared.Enums.ApprovalStatus.Pending:
                        <span class="approval-status status-pending">
                            <i class="fas fa-clock"></i> Chờ duyệt
                        </span>
                        break;
                    case InvestDapp.Shared.Enums.ApprovalStatus.Rejected:
                        <span class="approval-status status-rejected">
                            <i class="fas fa-times-circle"></i> Đã từ chối
                        </span>
                        break;
                }
            }

            <h1 class="article-title">@Model.Title</h1>

            <div class="article-meta">
                <div class="author-avatar">
                    @Model.AuthorAddress?.Substring(0, 2).ToUpper()
                </div>
                <span>Bởi <strong>@Model.AuthorAddress?.Substring(0, 6)...@Model.AuthorAddress?.Substring(Model.AuthorAddress.Length - 4)</strong></span>
                <span class="separator">|</span>
                <time datetime="@Model.CreatedAt.ToString("yyyy-MM-dd")">@Model.CreatedAt.ToString("dd MMMM, yyyy", new System.Globalization.CultureInfo("vi-VN"))</time>
                @if (Model.ViewCount > 0)
                {
                    <span class="separator">|</span>
                    <span><i class="fas fa-eye"></i> @Model.ViewCount lượt xem</span>
                }
            </div>
        </header>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <figure class="article-featured-image">
                <img src="@Model.ImageUrl" alt="@Model.Title" loading="lazy">
            </figure>
        }

        @if (Model.Campaign != null)
        {
            <div class="campaign-info">
                <h4><i class="fas fa-rocket"></i> Thuộc chiến dịch</h4>
                <a href="@Url.Action("Details", new { id = Model.CampaignId })" class="campaign-link">
                    @Model.Campaign.Name
                </a>
                <p style="color: var(--text-muted); margin-top: 5px; margin-bottom: 0;">
                    Mục tiêu: @Model.Campaign.GoalAmount BNB •
                    Kết thúc: @Model.Campaign.EndTime.ToString("dd/MM/yyyy")
                </p>
            </div>
        }

        <div class="article-content">
            @Html.Raw(Model.Content)
        </div>

        @if (!string.IsNullOrEmpty(Model.Tags))
        {
            <div class="tags-section">
                <span class="tags-label"><i class="fas fa-tags"></i> Tags:</span>
                <div class="tags-list">
                    @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                    {
                        <span class="tag">@tag.Trim()</span>
                    }
                </div>
            </div>
        }

        <footer class="article-footer">
            <div class="share-links">
                <span class="share-label"><i class="fas fa-share-alt"></i> Chia sẻ</span>
                <a class="share-btn" href="https://www.facebook.com/sharer/sharer.php?u=@(Context.Request.Scheme)://@(Context.Request.Host)@Url.Action("PostDetails", "Campaign", new { id = Model.Id })" target="_blank" title="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a class="share-btn" href="https://twitter.com/intent/tweet?url=@(Context.Request.Scheme)://@(Context.Request.Host)@Url.Action("PostDetails", "Campaign", new { id = Model.Id })&text=@Model.Title" target="_blank" title="Twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a class="share-btn copy" href="#" onclick="copyToClipboard(); return false;" title="Sao chép liên kết">
                    <i class="fas fa-link"></i>
                </a>
            </div>

            <a href="@Url.Action("Posts", new { campaignId = Model.CampaignId })" class="back-to-blog">
                <i class="fas fa-arrow-left"></i>
                Quay lại trang bài viết
            </a>
        </footer>
    </article>
</main>

@section Scripts {
    <script>
        // Copy link to clipboard
        function copyToClipboard() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(function() {
                // Show a temporary notification
                const notification = document.createElement('div');
                notification.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    background: var(--primary);
                    color: white;
                    padding: 10px 20px;
                    border-radius: 8px;
                    z-index: 9999;
                    animation: slideInRight 0.3s ease-out;
                `;
                notification.innerHTML = '<i class="fas fa-check"></i> Đã sao chép liên kết!';
                document.body.appendChild(notification);

                setTimeout(() => {
                    notification.remove();
                }, 3000);
            });
        }

        // Add CSS for notification animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes slideInRight {
                from {
                    opacity: 0;
                    transform: translateX(100%);
                }
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }
        `;
        document.head.appendChild(style);

        // Update view count (optional - you can implement this if needed)
        document.addEventListener('DOMContentLoaded', function() {
            // Track page view after 5 seconds (to avoid counting quick bounces)
            setTimeout(() => {
                // You can implement an AJAX call here to update view count
                console.log('Page view tracked for post @Model.Id');
            }, 5000);
        });
    </script>
}