@{
    ViewData["Title"] = "Chờ Duyệt";
    Layout = "~/Pages/_Layout.cshtml";
    var campaign = ViewBag.Campaign as InvestDapp.Models.Campaign;
    var posts = ViewBag.Posts as IEnumerable<InvestDapp.Shared.Models.CampaignPost>;
}

@section Styles {
    <style>
        /* ===================== CHỜ DUYỆT – FULL CSS (ĐÃ SỬA LỆCH) ===================== */
        .approval-container{
        max-width:1000px;
        margin: calc(var(--header-h,72px) + 32px) auto 64px;
        padding:0;
        }

        /* ---------- Wizard Steps (tiến trình 3 bước) ---------- */
        .approval-container .wizard-steps{
        display:flex; align-items:center; justify-content:center;
        margin-bottom:24px;
        background:var(--glass);
        padding:18px; border-radius:var(--radius);
        border:1px solid var(--border); box-shadow:var(--shadow);
        }
        .approval-container .step{ display:flex; align-items:center; gap:12px; font-weight:700; color:var(--muted); }
        .approval-container .step.active{ color:var(--warning); }
        .approval-container .step.completed{ color:var(--success); }

        .approval-container .step-number{
        width:40px; height:40px; border-radius:50%;
        display:grid; place-items:center;
        background:var(--border); color:var(--muted);
        font-weight:800; transition:all .2s;
        }
        .approval-container .step.active .step-number{ background:var(--warning); color:#00ff4c; box-shadow:0 6px 26px rgba(255,184,0,.12); }
        .approval-container .step.completed .step-number{ background:var(--success); color:#009dff; }
        .approval-container .step-connector{
        width:80px; height:2px; margin:0 16px;
        background:var(--border); align-self:center;
        }

        /* ---------- Cards / Status ---------- */
        .approval-container .success-card{
        background:linear-gradient(135deg,var(--success), #00b894);
        border-radius:var(--radius); padding:28px; color:var(--fg);
        margin-bottom:20px; box-shadow:0 10px 40px rgba(0,212,170,.12);
        animation:slideInUp .6s ease-out;
        text-align: center; 
        }
        .approval-container .success-icon{
        display:inline-flex; align-items:center; justify-content:center;
        width:56px; height:56px; border-radius:12px;
        font-size:2.4rem; margin:0 auto 12px; 
        background:rgba(255,255,255,0.06);
        }
        .approval-container .success-card h2{ font-size:1.2rem; margin:0 0 8px; font-weight:800; }
        .approval-container .success-card p{ margin:0;color:var(--fg);opacity:.95;line-height:1.45 }

        .approval-container .status-grid{
        display:grid; grid-template-columns:repeat(auto-fit,minmax(300px,1fr));
        gap:18px; margin-bottom:20px;
        }
        .approval-container .status-card{
        background:var(--glass); border:1px solid var(--border);
        border-radius:var(--radius); padding:18px; transition:.18s;
        }
        .approval-container .status-card:hover{ transform:translateY(-6px); box-shadow:var(--shadow) }
        .approval-container .status-header{ display:flex; align-items:center; gap:10px; margin-bottom:10px }
        .approval-container .status-icon{
        width:40px; height:40px; border-radius:10px; display:flex; align-items:center; justify-content:center; font-size:1.1rem;
        }
        .approval-container .campaign-status .status-icon{ background:rgba(255,184,0,.08); color:var(--warning) }
        .approval-container .post-status .status-icon{ background:rgba(255,184,0,.06); color:var(--warning) }
        .approval-container .status-title{ font-weight:800; color:var(--fg) }
        .approval-container .status-value{ font-size:1.05rem; margin-bottom:8px; color:var(--primary-2) }
        .approval-container .status-pending{ color:var(--warning); font-weight:800 }
        .approval-container .status-description{ color:var(--muted); font-size:.92rem; line-height:1.4 }

        /* ---------- Timeline (áp dụng mẫu Dashboard: spine 22px + marker 22px) ---------- */
        .approval-container .timeline-card{
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
        border:1px solid rgba(255,255,255,0.04);
        border-radius:var(--radius);
        padding:20px; margin-bottom:22px;
        box-shadow: 0 8px 28px rgba(2,6,23,0.12);
        }
        .approval-container .timeline-header{ display:flex; align-items:center; gap:14px; margin-bottom:14px }
        .approval-container .timeline-icon{
        width:44px; height:44px; border-radius:10px;
        background: linear-gradient(135deg, rgba(108,240,255,.06), rgba(155,107,255,.04));
        color:var(--primary); display:flex; align-items:center; justify-content:center; font-size:1.05rem;
        }
        .approval-container .timeline-title{ font-weight:800; color:var(--fg); font-size:1.02rem }

        /* FIX LỆCH – reset padding UL, đồng bộ toạ độ bằng biến --tl-spine */
        .approval-container .timeline-list{
        list-style:none; margin:0; padding:0 !important;
        position:relative; --tl-spine: 22px;
        }
        .approval-container .timeline-list::before{
        content:""; position:absolute;
        left: var(--tl-spine) !important;
        top:6px; bottom:6px; width:2px;
        background:var(--border); border-radius:2px;
        }
        .approval-container .timeline-item{
        position:relative; margin-left:0 !important;
        padding-left: calc(var(--tl-spine) + 34px) !important;
        }
        .approval-container .timeline-item::before{
        content:""; position:absolute; top:2px;
        left: calc(var(--tl-spine) - 11px) !important; /* tâm marker = spine */
        width:22px; height:22px; border-radius:50%;
        border:2px solid var(--border); background: var(--bg);
        transform:none !important; 
        }
        .approval-container .timeline-item.completed::before{ background:rgb(0, 255, 132); border-color:#0dd; }
        .approval-container .timeline-item.pending::before{ background:rgb(0, 208, 245); border-color:rgb(36, 165, 188); animation:pulse 2s infinite; }
        .approval-container .timeline-item.future::before{ background:transparent; border-color:var(--border); }
        .approval-container .timeline-item:hover{ transform: translateX(4px); background: rgba(255,255,255,0.015) }

        .approval-container .timeline-step{
        font-weight:800; color:var(--fg); margin-bottom:6px; font-size:var(--fs-3);
        display:inline-flex; align-items:center; gap:8px;
        }
        .approval-container .timeline-desc{ color:var(--muted); font-size:var(--fs-1); line-height:1.4 }
        .approval-container .timeline-time{ color:var(--muted); font-size:.82rem; margin-top:8px }

        /* ---------- Buttons ---------- */
        .approval-container .action-buttons{ text-align:center; margin-top:18px }
        .approval-container .btn{
        padding:10px 16px; border-radius:10px; font-size:14px; font-weight:800;
        cursor:pointer; text-decoration:none; display:inline-flex; align-items:center; gap:8px; margin:0 8px;
        }
        .approval-container .btn-primary{ background:var(--gradient); color:var(--fg); box-shadow:0 8px 26px rgba(0,170,255,.08) }
        .approval-container .btn-primary:hover{ transform:translateY(-2px) }
        .approval-container .btn-secondary{ background:var(--card); color:var(--fg); border:1px solid var(--border) }
        .approval-container .btn-secondary:hover{ background:transparent; border-color:var(--primary) }

        /* ---------- Notifications (JS createNotification dùng .notification) ---------- */
        .approval-container .notification{ /* để dùng chung cũng có thể bỏ selector .approval-container */
        position: fixed; top:20px; right:20px; z-index:10000;
        padding:12px 14px; border-radius:12px; font-weight:800; color:#fff;
        box-shadow:0 10px 26px rgba(0,0,0,.3); backdrop-filter: blur(6px);
        }
        .notification.success{ background: linear-gradient(135deg,#28a745,#20c997); }
        .notification.error{   background: linear-gradient(135deg,#dc3545,#e74c3c); }

        /* ---------- Responsive giữ căn thẳng ---------- */
        @@media (max-width:768px){
        .approval-container .wizard-steps{ flex-direction:column; gap:12px }
        .approval-container .step-connector{ width:2px; height:30px; margin:10px 0 }

        .approval-container .status-grid{ grid-template-columns:1fr }
        .approval-container .success-card{ padding:16px; }
        .approval-container .success-icon{ font-size:2.4rem; align-items: center; }
        .approval-container .success-card h2{ font-size:1.1rem }

        /* vẫn thẳng hàng */
        .approval-container .timeline-list::before{ left: var(--tl-spine) !important; }
        .approval-container .timeline-item{ padding-left: calc(var(--tl-spine) + 34px) !important; }
        .approval-container .timeline-item::before{ left: calc(var(--tl-spine) - 11px) !important; }
        }

        /* ---------- Animations ---------- */
        @@keyframes slideInUp{ from{ opacity:0; transform:translateY(16px) } to{ opacity:1; transform:none } }
        @@keyframes pulse{
        0%{ box-shadow:0 0 0 0 rgba(255,184,0,.6) }
        70%{ box-shadow:0 0 0 10px rgba(255,184,0,0) }
        100%{ box-shadow:0 0 0 0 rgba(255,184,0,0) }
        }
    </style>
}

@{
    var postCount = posts?.Count() ?? 0;
    var isApproved = campaign?.ApprovalStatus == InvestDapp.Shared.Enums.ApprovalStatus.Approved;
    var firstPost = posts?.OrderBy(p => p.CreatedAt).FirstOrDefault();
    var isFirstPostPending = firstPost != null && firstPost.ApprovalStatus == InvestDapp.Shared.Enums.ApprovalStatus.Pending;
}

<div class="approval-container">

    @* If there's at least one post and campaign is not approved -> show progress for the first post *@
    @if (isFirstPostPending && !isApproved)
    {
        <!-- Progress Steps - First post pending -->
        <div class="wizard-steps">
            <div class="step completed">
                <div class="step-number"><i class="fas fa-check"></i></div>
                <span>Tạo Chiến Dịch</span>
            </div>
            <div class="step-connector"></div>
            <div class="step completed">
                <div class="step-number"><i class="fas fa-check"></i></div>
                <span>Tạo Bài Viết</span>
            </div>
            <div class="step-connector"></div>
            <div class="step active">
                <div class="step-number"><i class="fas fa-clock"></i></div>
                <span>Chờ Duyệt</span>
            </div>
        </div>

        <!-- Success Message (first post created) -->
        <div class="success-card">
            <div class="success-icon">🎉</div>
            <h2>Hoàn Thành Bước Tạo Bài Viết Đầu Tiên</h2>
            <p>
                Bài viết đầu tiên cho chiến dịch "<strong>@campaign?.Name</strong>" đã được tạo và đang chờ admin phê duyệt.
                Bạn sẽ không thể tạo thêm bài viết cho tới khi chiến dịch được duyệt.
            </p>
        </div>

        <!-- Status Overview -->
        <div class="status-grid">
            <div class="status-card campaign-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <div class="status-title">Trạng Thái Chiến Dịch</div>
                </div>
                <div class="status-value status-pending">
                    @campaign?.ApprovalStatus
                </div>
                <div class="status-description">
                    Chiến dịch đang được admin xem xét. Bạn sẽ được thông báo khi phê duyệt.
                </div>
            </div>

            <div class="status-card post-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-pen-fancy"></i>
                    </div>
                    <div class="status-title">Bài Viết</div>
                </div>
                <div class="status-value status-pending">
                    @postCount bài viết đã tạo
                </div>
                <div class="status-description">
                    Bài viết đầu tiên đang chờ duyệt; bạn không thể tạo thêm bài viết cho tới khi chiến dịch được phê duyệt.
                </div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="timeline-card">
            <div class="timeline-header">
                <div class="timeline-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="timeline-title">Quy Trình Duyệt</div>
            </div>

            <ul class="timeline-list">
                <li class="timeline-item completed">
                    <div class="timeline-step">✅ Tạo chiến dịch</div>
                    <div class="timeline-desc">Bạn đã tạo chiến dịch thành công.</div>
                    <div class="timeline-time">Đã hoàn thành</div>
                </li>
                <li class="timeline-item completed">
                    <div class="timeline-step">✅ Tạo bài viết đầu tiên</div>
                    <div class="timeline-desc">Bài viết đầu tiên đã được gửi để chờ phê duyệt.</div>
                    <div class="timeline-time">Đã hoàn thành</div>
                </li>
                <li class="timeline-item pending">
                    <div class="timeline-step">⏳ Xem xét của Admin</div>
                    <div class="timeline-desc">Admin đang xem xét nội dung và tính hợp lệ của dự án.</div>
                    <div class="timeline-time">Đang thực hiện</div>
                </li>
            </ul>
        </div>

        <!-- Action Buttons (disable create post) -->
        <div class="action-buttons">
            <a href="@Url.Action("MyCampaigns")" class="btn btn-primary">
                <i class="fas fa-folder-open"></i>
                Xem Tất Cả Chiến Dịch
            </a>
            <a class="btn btn-primary" style="opacity:0.6; pointer-events:none;">
                <i class="fas fa-plus"></i>
                Tạo Bài Viết (bị khóa - chờ phê duyệt)
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home"></i>
                Về Trang Chủ
            </a>
        </div>
    }
    else
    {
        @* Either no posts yet, or campaign already approved: allow creating posts and hide progress *@
        <div class="status-grid">
            <div class="status-card campaign-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <div class="status-title">Trạng Thái Chiến Dịch</div>
                </div>
                <div class="status-value">
                    @campaign?.ApprovalStatus
                </div>
                <div class="status-description">
                    @if (isApproved)
                    {
                        <text>Chiến dịch đã được phê duyệt. Bạn có thể tạo thêm bài viết.</text>
                    }
                    else
                    {
                        <text>Chưa có bài viết nào. Hãy tạo bài viết đầu tiên để bắt đầu.</text>
                    }
                </div>
            </div>

            <div class="status-card post-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-pen-fancy"></i>
                    </div>
                    <div class="status-title">Bài Viết</div>
                </div>
                <div class="status-value">
                    @postCount bài viết
                </div>
                <div class="status-description">
                    @if (postCount == 0)
                    {
                        <text>Chưa có bài viết nào. Tạo bài viết giới thiệu để admin duyệt.</text>
                    }
                    else
                    {
                        <text>Các bài viết đã được phê duyệt sẽ hiển thị công khai.</text>
                    }
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="@Url.Action("CreatePost", "Campaigns", new { campaignId = campaign?.Id })" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Tạo Bài Viết
            </a>
            <a href="@Url.Action("MyCampaigns")" class="btn btn-secondary">
                <i class="fas fa-folder-open"></i>
                Xem Tất Cả Chiến Dịch
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home"></i>
                Về Trang Chủ
            </a>
        </div>
    }

</div>

@section Scripts {
    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate cards on load
            const cards = document.querySelectorAll('.status-card, .timeline-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.style.animation = 'slideInUp 0.6s ease-out forwards';
            });

            // Add hover effects to timeline items
            const timelineItems = document.querySelectorAll('.timeline-item');
            timelineItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(5px)';
                    this.style.transition = 'transform 0.3s ease';
                });

                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });
        });
    </script>
}