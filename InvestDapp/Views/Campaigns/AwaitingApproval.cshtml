@{
    ViewData["Title"] = "Chờ Duyệt";
    Layout = "~/Pages/_Layout.cshtml";
    var campaign = ViewBag.Campaign as InvestDapp.Models.Campaign;
    var posts = ViewBag.Posts as IEnumerable<InvestDapp.Shared.Models.CampaignPost>;
}

@section Styles {
    <style>
        /* Use shared theme variables and match layout spacing */
        .approval-container { max-width:1000px; margin: calc(var(--header-h,72px) + 32px) auto 64px; padding:0 }

        .wizard-steps{ display:flex; align-items:center; justify-content:center; margin-bottom:24px; background:var(--glass); padding:18px; border-radius:var(--radius); border:1px solid var(--border); box-shadow:var(--shadow) }

        .step{ display:flex; align-items:center; gap:12px; color:var(--muted); font-weight:700 }
        .step.active{ color:var(--warning) }
        .step.completed{ color:var(--success) }

        .step-number{ min-width:40px; height:40px; border-radius:50%; background:var(--border); color:var(--muted); display:flex; align-items:center; justify-content:center; font-weight:800; transition:all .2s }
        .step.active .step-number{ background:var(--warning); color:#081218; box-shadow:0 6px 26px rgba(255,184,0,.12) }
        .step.completed .step-number{ background:var(--success); color:#04121b }

        .step-connector{ width:80px; height:2px; background:var(--border); margin:0 16px }

        .success-card{ background:linear-gradient(135deg,var(--success), #00b894); border-radius:var(--radius); padding:28px; color:var(--fg); margin-bottom:20px; box-shadow:0 10px 40px rgba(0,212,170,.12); animation:slideInUp .6s ease-out }
        .success-icon{ font-size:3.2rem; margin-bottom:12px }
        .success-card h2{ font-size:1.2rem; margin:0 0 8px; font-weight:800 }
        .success-card p{ margin:0;color:var(--fg);opacity:.95;line-height:1.45 }

        .status-grid{ display:grid; grid-template-columns:repeat(auto-fit,minmax(300px,1fr)); gap:18px; margin-bottom:20px }
        .status-card{ background:var(--glass); border:1px solid var(--border); border-radius:var(--radius); padding:18px; transition:all .18s }
        .status-card:hover{ transform:translateY(-6px); box-shadow:var(--shadow) }

        .status-header{ display:flex; align-items:center; gap:10px; margin-bottom:10px }
        .status-icon{ width:40px; height:40px; border-radius:10px; display:flex; align-items:center; justify-content:center; font-size:1.1rem }
        .campaign-status .status-icon{ background:rgba(255,184,0,.08); color:var(--warning) }
        .post-status .status-icon{ background:rgba(255,184,0,.06); color:var(--warning) }

        .status-title{ font-weight:800; color:var(--fg) }
        .status-value{ font-size:1.05rem; margin-bottom:8px; color:var(--primary-2) }
        .status-pending{ color:var(--warning); font-weight:800 }
        .status-description{ color:var(--muted); font-size:.92rem; line-height:1.4 }

        .timeline-card{ background:var(--glass); border:1px solid var(--border); border-radius:var(--radius); padding:18px; margin-bottom:18px }
        .timeline-header{ display:flex; align-items:center; gap:10px; margin-bottom:12px }
        .timeline-icon{ width:40px; height:40px; border-radius:10px; background:rgba(0,170,255,.06); color:var(--primary); display:flex; align-items:center; justify-content:center }
        .timeline-title{ font-weight:700; color:var(--fg); font-size:1rem }

        .timeline-list{ list-style:none; position:relative; padding-left:28px }
        .timeline-list::before{ content:''; position:absolute; left:10px; top:0; bottom:0; width:2px; background:var(--border) }

        .timeline-item{ position:relative; margin-bottom:14px; padding-left:28px }
        .timeline-item::before{ content:''; position:absolute; left:-6px; top:6px; width:12px; height:12px; border-radius:50%; background:var(--success) }
        .timeline-item.pending::before{ background:var(--warning); animation:pulse 2s infinite }
        .timeline-item.future::before{ background:var(--border) }

        .timeline-step{ font-weight:700; color:var(--fg); margin-bottom:4px }
        .timeline-desc{ color:var(--muted); font-size:.9rem }
        .timeline-time{ color:var(--muted); font-size:.8rem; margin-top:6px }

        .action-buttons{ text-align:center; margin-top:18px }
        .btn{ padding:10px 16px; border-radius:10px; font-size:14px; font-weight:800; cursor:pointer; text-decoration:none; display:inline-flex; align-items:center; gap:8px; margin:0 8px }
        .btn-primary{ background:var(--gradient); color:var(--fg); box-shadow:0 8px 26px rgba(0,170,255,.08) }
        .btn-primary:hover{ transform:translateY(-2px) }
        .btn-secondary{ background:var(--card); color:var(--fg); border:1px solid var(--border) }
        .btn-secondary:hover{ background:transparent; border-color:var(--primary) }

        @@media (max-width:768px){ .wizard-steps{ flex-direction:column; gap:12px } .step-connector{ width:2px;height:30px;margin:10px 0 } .status-grid{ grid-template-columns:1fr } .success-card{ padding:16px } .success-icon{ font-size:2.4rem } .success-card h2{ font-size:1.1rem } .action-buttons{ display:flex; flex-direction:column; gap:12px } .btn{ margin:0; justify-content:center } }

        @@keyframes slideInUp{ from{ opacity:0; transform:translateY(16px) } to{ opacity:1; transform:none } }
        @@keyframes bounce{ 0%,20%,53%,80%,100%{ transform:translate3d(0,0,0) } 40%,43%{ transform:translate3d(0,-8px,0) } 70%{ transform:translate3d(0,-4px,0) } 90%{ transform:translate3d(0,-2px,0) } }
        @@keyframes pulse{ 0%{ box-shadow:0 0 0 0 rgba(255,184,0,.6) } 70%{ box-shadow:0 0 0 10px rgba(255,184,0,0) } 100%{ box-shadow:0 0 0 0 rgba(255,184,0,0) } }
    </style>
}

@{
    var postCount = posts?.Count() ?? 0;
    var isApproved = campaign?.ApprovalStatus == InvestDapp.Shared.Enums.ApprovalStatus.Approved;
    var firstPost = posts?.OrderBy(p => p.CreatedAt).FirstOrDefault();
    var isFirstPostPending = firstPost != null && firstPost.ApprovalStatus == InvestDapp.Shared.Enums.ApprovalStatus.Pending;
}

<div class="approval-container">

    @* If there's at least one post and campaign is not approved -> show progress for the first post *@
    @if (isFirstPostPending && !isApproved)
    {
        <!-- Progress Steps - First post pending -->
        <div class="wizard-steps">
            <div class="step completed">
                <div class="step-number"><i class="fas fa-check"></i></div>
                <span>Tạo Chiến Dịch</span>
            </div>
            <div class="step-connector"></div>
            <div class="step completed">
                <div class="step-number"><i class="fas fa-check"></i></div>
                <span>Tạo Bài Viết</span>
            </div>
            <div class="step-connector"></div>
            <div class="step active">
                <div class="step-number"><i class="fas fa-clock"></i></div>
                <span>Chờ Duyệt</span>
            </div>
        </div>

        <!-- Success Message (first post created) -->
        <div class="success-card">
            <div class="success-icon">🎉</div>
            <h2>Hoàn Thành Bước Tạo Bài Viết Đầu Tiên</h2>
            <p>
                Bài viết đầu tiên cho chiến dịch "<strong>@campaign?.Name</strong>" đã được tạo và đang chờ admin phê duyệt.
                Bạn sẽ không thể tạo thêm bài viết cho tới khi chiến dịch được duyệt.
            </p>
        </div>

        <!-- Status Overview -->
        <div class="status-grid">
            <div class="status-card campaign-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <div class="status-title">Trạng Thái Chiến Dịch</div>
                </div>
                <div class="status-value status-pending">
                    @campaign?.ApprovalStatus
                </div>
                <div class="status-description">
                    Chiến dịch đang được admin xem xét. Bạn sẽ được thông báo khi phê duyệt.
                </div>
            </div>

            <div class="status-card post-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-pen-fancy"></i>
                    </div>
                    <div class="status-title">Bài Viết</div>
                </div>
                <div class="status-value status-pending">
                    @postCount bài viết đã tạo
                </div>
                <div class="status-description">
                    Bài viết đầu tiên đang chờ duyệt; bạn không thể tạo thêm bài viết cho tới khi chiến dịch được phê duyệt.
                </div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="timeline-card">
            <div class="timeline-header">
                <div class="timeline-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="timeline-title">Quy Trình Duyệt</div>
            </div>

            <ul class="timeline-list">
                <li class="timeline-item">
                    <div class="timeline-step">✅ Tạo chiến dịch</div>
                    <div class="timeline-desc">Bạn đã tạo chiến dịch thành công.</div>
                    <div class="timeline-time">Đã hoàn thành</div>
                </li>
                <li class="timeline-item">
                    <div class="timeline-step">✅ Tạo bài viết đầu tiên</div>
                    <div class="timeline-desc">Bài viết đầu tiên đã được gửi để chờ phê duyệt.</div>
                    <div class="timeline-time">Đã hoàn thành</div>
                </li>
                <li class="timeline-item pending">
                    <div class="timeline-step">⏳ Xem xét của Admin</div>
                    <div class="timeline-desc">Admin đang xem xét nội dung và tính hợp lệ của dự án.</div>
                    <div class="timeline-time">Đang thực hiện</div>
                </li>
            </ul>
        </div>

        <!-- Action Buttons (disable create post) -->
        <div class="action-buttons">
            <a href="@Url.Action("MyCampaigns")" class="btn btn-primary">
                <i class="fas fa-folder-open"></i>
                Xem Tất Cả Chiến Dịch
            </a>
            <a class="btn btn-primary" style="opacity:0.6; pointer-events:none;">
                <i class="fas fa-plus"></i>
                Tạo Bài Viết (bị khóa - chờ phê duyệt)
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home"></i>
                Về Trang Chủ
            </a>
        </div>
    }
    else
    {
        @* Either no posts yet, or campaign already approved: allow creating posts and hide progress *@
        <div class="status-grid">
            <div class="status-card campaign-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <div class="status-title">Trạng Thái Chiến Dịch</div>
                </div>
                <div class="status-value">
                    @campaign?.ApprovalStatus
                </div>
                <div class="status-description">
                    @if (isApproved)
                    {
                        <text>Chiến dịch đã được phê duyệt. Bạn có thể tạo thêm bài viết.</text>
                    }
                    else
                    {
                        <text>Chưa có bài viết nào. Hãy tạo bài viết đầu tiên để bắt đầu.</text>
                    }
                </div>
            </div>

            <div class="status-card post-status">
                <div class="status-header">
                    <div class="status-icon">
                        <i class="fas fa-pen-fancy"></i>
                    </div>
                    <div class="status-title">Bài Viết</div>
                </div>
                <div class="status-value">
                    @postCount bài viết
                </div>
                <div class="status-description">
                    @if (postCount == 0)
                    {
                        <text>Chưa có bài viết nào. Tạo bài viết giới thiệu để admin duyệt.</text>
                    }
                    else
                    {
                        <text>Các bài viết đã được phê duyệt sẽ hiển thị công khai.</text>
                    }
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="@Url.Action("CreatePost", "Campaigns", new { campaignId = campaign?.Id })" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Tạo Bài Viết
            </a>
            <a href="@Url.Action("MyCampaigns")" class="btn btn-secondary">
                <i class="fas fa-folder-open"></i>
                Xem Tất Cả Chiến Dịch
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home"></i>
                Về Trang Chủ
            </a>
        </div>
    }

</div>

@section Scripts {
    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate cards on load
            const cards = document.querySelectorAll('.status-card, .timeline-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.style.animation = 'slideInUp 0.6s ease-out forwards';
            });

            // Add hover effects to timeline items
            const timelineItems = document.querySelectorAll('.timeline-item');
            timelineItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(5px)';
                    this.style.transition = 'transform 0.3s ease';
                });

                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });
        });
    </script>
}