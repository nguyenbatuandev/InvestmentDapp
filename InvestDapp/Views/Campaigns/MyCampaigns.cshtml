@model IEnumerable<InvestDapp.Models.Campaign>
@{
    ViewData["Title"] = "Chiến Dịch Của Tôi";
    Layout = "~/Pages/_Layout.cshtml";
}

@section Styles {
    <style>
        /* --- BIẾN MÀU SẮC --- */
        :root {
            --bg-dark: #0a0e1a;
            --bg-light: #12182b;
            --primary: #00aaff;
            --primary-light: #00c6ff;
            --secondary: #272c44;
            --text-color: #e0e0e0;
            --text-muted: #8a93b3;
            --success: #00d4aa;
            --warning: #ffb800;
            --danger: #ff6b6b;
            --gradient: linear-gradient(135deg, var(--primary), var(--primary-light));
        }

        .my-campaigns-container {
            max-width: 1200px;
            margin: 120px auto 60px;
            padding: 0 20px;
        }

        .page-header {
            background: var(--gradient);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            color: white;
            margin-bottom: 40px;
            box-shadow: 0 10px 40px rgba(0, 170, 255, 0.3);
        }

            .page-header h1 {
                font-size: 2.5rem;
                margin-bottom: 15px;
                font-weight: 700;
            }

            .page-header p {
                font-size: 1.1rem;
                opacity: 0.9;
            }

        .campaigns-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .campaign-card {
            background: var(--bg-light);
            border: 1px solid var(--secondary);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
            animation: slideInUp 0.6s ease-out;
            position: relative;
        }

            .campaign-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 30px rgba(0, 170, 255, 0.15);
            }

        .card-header {
            padding: 25px;
            border-bottom: 1px solid var(--secondary);
            position: relative;
        }

        .campaign-title {
            color: var(--text-color);
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 10px;
            line-height: 1.4;
        }

            .campaign-title a {
                color: inherit;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .campaign-title a:hover {
                    color: var(--primary);
                }

        .campaign-short-desc {
            color: var(--text-muted);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .status-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .status-pending {
            background: rgba(255, 184, 0, 0.2);
            color: var(--warning);
            border: 1px solid rgba(255, 184, 0, 0.3);
        }

        .status-approved {
            background: rgba(0, 212, 170, 0.2);
            color: var(--success);
            border: 1px solid rgba(0, 212, 170, 0.3);
        }

        .status-rejected {
            background: rgba(255, 107, 107, 0.2);
            color: var(--danger);
            border: 1px solid rgba(255, 107, 107, 0.3);
        }

        .card-body {
            padding: 25px;
        }

        .campaign-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-item {
            background: var(--bg-dark);
            padding: 12px 15px;
            border-radius: 8px;
            border: 1px solid var(--secondary);
            text-align: center;
        }

        .stat-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 2px;
        }

        .stat-label {
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        .progress-section {
            margin-bottom: 20px;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .progress-label {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-color);
        }

        .progress-percentage {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--primary);
        }

        .progress-bar {
            height: 8px;
            background: var(--secondary);
            border-radius: 4px;
            overflow: hidden;
            margin-bottom: 8px;
        }

        .progress-fill {
            height: 100%;
            background: var(--gradient);
            border-radius: 4px;
            transition: width 0.8s ease;
        }

        .progress-info {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        .card-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            flex: 1;
            justify-content: center;
            min-width: 100px;
        }

        .btn-primary-action {
            background: var(--primary);
            color: white;
        }

            .btn-primary-action:hover {
                background: var(--primary-light);
                transform: translateY(-1px);
            }

        .btn-secondary-action {
            background: var(--secondary);
            color: var(--text-color);
            border: 1px solid var(--secondary);
        }

            .btn-secondary-action:hover {
                background: transparent;
                border-color: var(--primary);
                color: var(--primary);
            }

        .timeline-info {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-bottom: 15px;
        }

        .time-left {
            color: var(--warning);
            font-weight: 600;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: var(--text-muted);
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--text-color);
        }

        .empty-description {
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .create-campaign-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 15px 30px;
            background: var(--gradient);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 170, 255, 0.3);
        }

            .create-campaign-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 25px rgba(0, 170, 255, 0.4);
            }

        /* Quick Actions */
        .quick-actions {
            background: var(--bg-light);
            border: 1px solid var(--secondary);
            border-radius: 16px;
            padding: 25px;
            margin-bottom: 40px;
        }

            .quick-actions h3 {
                color: var(--primary);
                margin-bottom: 20px;
                font-size: 1.2rem;
            }

        .quick-actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .quick-action-btn {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px 20px;
            background: var(--bg-dark);
            border: 1px solid var(--secondary);
            border-radius: 12px;
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .quick-action-btn:hover {
                border-color: var(--primary);
                background: rgba(0, 170, 255, 0.1);
                color: var(--primary);
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .campaigns-grid {
                grid-template-columns: 1fr;
            }

            .campaign-stats {
                grid-template-columns: 1fr;
            }

            .card-actions {
                flex-direction: column;
            }

            .btn-action {
                flex: none;
            }
        }

        /* Animation */
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

<div class="my-campaigns-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-rocket"></i> Chiến Dịch Của Tôi</h1>
        <p>Quản lý và theo dõi các chiến dịch huy động vốn của bạn</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="background: rgba(0, 212, 170, 0.1); border-left: 4px solid var(--success); color: var(--success); padding: 15px 20px; border-radius: 8px; margin-bottom: 25px;">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" style="background: rgba(255, 107, 107, 0.1); border-left: 4px solid var(--danger); color: var(--danger); padding: 15px 20px; border-radius: 8px; margin-bottom: 25px;">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        </div>
    }

    @if (Model?.Any() == true)
    {
        <!-- Quick Actions -->
        <div class="quick-actions">
            <h3><i class="fas fa-bolt"></i> Thao Tác Nhanh</h3>
            <div class="quick-actions-grid">
                <a href="@Url.Action("Create")" class="quick-action-btn">
                    <i class="fas fa-plus"></i>
                    <span>Tạo Chiến Dịch Mới</span>
                </a>
                <a href="@Url.Action("Index")" class="quick-action-btn">
                    <i class="fas fa-search"></i>
                    <span>Khám Phá Dự Án</span>
                </a>
                <a href="/Admin" class="quick-action-btn">
                    <i class="fas fa-chart-bar"></i>
                    <span>Thống Kê</span>
                </a>
            </div>
        </div>

        <!-- Campaigns Grid -->
        <div class="campaigns-grid">
            @foreach (var campaign in Model.OrderByDescending(c => c.CreatedAt))
            {
                <div class="campaign-card">
                    <div class="card-header">
                        @switch (campaign.ApprovalStatus)
                        {
                            case InvestDapp.Shared.Enums.ApprovalStatus.Pending:
                                @switch (campaign.Status)
                                {
                                    case InvestDapp.Shared.Enums.CampaignStatus.PendingPost:
                                        <span class="status-badge status-pending">
                                            <i class="fas fa-pen"></i> Chờ Bài Viết
                                        </span>
                                        break;
                                    case InvestDapp.Shared.Enums.CampaignStatus.PendingApproval:
                                        <span class="status-badge status-pending">
                                            <i class="fas fa-clock"></i> Chờ Duyệt
                                        </span>
                                        break;
                                    default:
                                        <span class="status-badge status-pending">
                                            <i class="fas fa-clock"></i> Chờ Duyệt
                                        </span>
                                        break;
                                }
                                break;
                            case InvestDapp.Shared.Enums.ApprovalStatus.Approved:
                                @switch (campaign.Status)
                                {
                                    case InvestDapp.Shared.Enums.CampaignStatus.Active:
                                        <span class="status-badge status-approved">
                                            <i class="fas fa-play-circle"></i> Đang Gây Quỹ
                                        </span>
                                        break;
                                    case InvestDapp.Shared.Enums.CampaignStatus.Completed:
                                        <span class="status-badge status-approved">
                                            <i class="fas fa-check-circle"></i> Hoàn Thành
                                        </span>
                                        break;
                                    default:
                                        <span class="status-badge status-approved">
                                            <i class="fas fa-check-circle"></i> Đã Duyệt
                                        </span>
                                        break;
                                }
                                break;
                            case InvestDapp.Shared.Enums.ApprovalStatus.Rejected:
                                <span class="status-badge status-rejected">
                                    <i class="fas fa-times-circle"></i> Bị Từ Chối
                                </span>
                                break;
                        }

                        <h3 class="campaign-title">
                            <a href="@Url.Action("Details", new { id = campaign.Id })">
                                @campaign.Name
                            </a>
                        </h3>
                        <p class="campaign-short-desc">@campaign.ShortDescription</p>
                    </div>

                    <div class="card-body">
                        <div class="campaign-stats">
                            <div class="stat-item">
                                <div class="stat-value">@campaign.GoalAmount</div>
                                <div class="stat-label">Mục Tiêu (BNB)</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">@campaign.CurrentRaisedAmount</div>
                                <div class="stat-label">Đã Huy Động (BNB)</div>
                            </div>
                        </div>

                        <div class="progress-section">
                            <div class="progress-header">
                                <span class="progress-label">Tiến Độ</span>
                                <span class="progress-percentage">
                                    @(campaign.GoalAmount > 0 ? (campaign.CurrentRaisedAmount / campaign.GoalAmount * 100).ToString("F1") : "0")%
                                </span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @(campaign.GoalAmount > 0 ? (campaign.CurrentRaisedAmount / campaign.GoalAmount * 100) : 0)%"></div>
                            </div>
                            <div class="progress-info">
                                <span>@campaign.InvestorCount nhà đầu tư</span>
                                <span>@((campaign.EndTime - DateTime.UtcNow).Days) ngày còn lại</span>
                            </div>
                        </div>

                        <div class="timeline-info">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Tạo lúc:</span>
                            <span>@campaign.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>

                        <div class="card-actions">
                            <a href="@Url.Action("Details", new { id = campaign.Id })" class="btn-action btn-primary-action">
                                <i class="fas fa-eye"></i>
                                Chi Tiết
                            </a>

                            <a href="@Url.Action("Dashboard", new { id = campaign.Id })" class="btn-action btn-primary-action">
                                <i class="fas fa-tachometer-alt"></i>
                                Dashboard
                            </a>

                            @if (campaign.ApprovalStatus == InvestDapp.Shared.Enums.ApprovalStatus.Approved)
                            {
                                <a href="@Url.Action("Posts", new { campaignId = campaign.Id })" class="btn-action btn-secondary-action">
                                    <i class="fas fa-newspaper"></i>
                                    Bài Viết
                                </a>
                            }
                            else if (campaign.ApprovalStatus == InvestDapp.Shared.Enums.ApprovalStatus.Pending)
                            {
                                <a href="@Url.Action("AwaitingApproval", new { campaignId = campaign.Id })" class="btn-action btn-secondary-action">
                                    <i class="fas fa-hourglass-half"></i>
                                    Theo Dõi
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-rocket"></i>
            </div>
            <h2 class="empty-title">Chưa Có Chiến Dịch Nào</h2>
            <p class="empty-description">
                Bạn chưa tạo chiến dịch huy động vốn nào. Hãy bắt đầu biến ý tưởng của bạn thành hiện thực!
            </p>
            <a href="@Url.Action("Create")" class="create-campaign-btn">
                <i class="fas fa-plus"></i>
                Tạo Chiến Dịch Đầu Tiên
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered animation to campaign cards
            const cards = document.querySelectorAll('.campaign-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });

            // Animate progress bars
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';

                setTimeout(() => {
                    bar.style.width = width;
                }, 500 + Math.random() * 500);
            });
        });
    </script>
}