    function voteOnWithdrawal(requestId, agree){
      const actionText = agree ? 'ủng hộ' : 'phản đối';
      if (!confirm(`Bạn có chắc chắn muốn ${actionText} yêu cầu rút vốn này không?`)) return;

      (async () => {
        try {
          // Always resolve the authoritative pending withdrawal id from server API
          const res = await fetch(`/api/campaigns/@Model.Id/pending-withdrawal`);
          if (!res.ok) {
            const txt = await res.text();
            throw new Error(txt || 'Không thể lấy thông tin yêu cầu rút vốn từ server.');
          }
          const payload = await res.json();
          const resolved = Number(payload?.requestId ?? payload?.requestIdOnChain);
          if (!Number.isFinite(resolved)) throw new Error('Server không trả về requestId hợp lệ.');

          // Call the common vote flow with resolved id
          return voteOnWithdrawalRequest(resolved, agree);
        } catch (err) {
          console.error('Pending withdrawal resolution error:', err);
          showError(err.message || 'Không thể xác định yêu cầu rút vốn. Vui lòng thử lại sau.');
        }
      })();
