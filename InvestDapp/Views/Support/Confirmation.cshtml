@{
    ViewData["Title"] = "Gửi yêu cầu hỗ trợ thành công";
    Layout = "~/Pages/_Layout.cshtml";
    var ticketCode = ViewBag.TicketCode as string ?? string.Empty;
}

@section Styles {
    <style>
        .support-confirm {
            max-width: 720px;
            margin: 140px auto 60px;
            padding: 0 16px;
        }

        .confirm-card {
            background: linear-gradient(180deg, rgba(34,197,94,.18), rgba(34,197,94,.06));
            border: 1px solid rgba(34,197,94,.35);
            border-radius: 18px;
            box-shadow: var(--shadow);
            text-align: center;
            padding: 48px 32px;
        }

        .confirm-icon {
            font-size: 48px;
            color: #86f7b7;
            margin-bottom: 18px;
        }

        .confirm-card h1 {
            font-size: clamp(28px,4vw,36px);
            font-weight: 700;
            margin-bottom: 12px;
        }

        .confirm-card p {
            color: var(--muted);
            margin-bottom: 18px;
        }

        .confirm-actions {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 12px;
            margin-top: 24px;
        }
    </style>
}

<div class="support-confirm">
    <div class="confirm-card">
        <div class="confirm-icon">✔️</div>
        <h1>Yêu cầu của bạn đã được gửi!</h1>
        <p>Mã ticket của bạn: <strong>#@ticketCode</strong></p>
        <p>Đội ngũ hỗ trợ sẽ liên hệ khi có cập nhật mới. Bạn có thể theo dõi tiến trình hoặc bổ sung thông tin bất cứ lúc nào.</p>

        <div class="confirm-actions">
            <a class="btn" asp-controller="Support" asp-action="Index">Xem ticket của tôi</a>
            <a class="btn secondary" asp-action="Create">Gửi thêm yêu cầu</a>
            <a class="btn secondary" asp-controller="Home" asp-action="Index">Về trang chủ</a>
        </div>
    </div>
</div>
