@{
    ViewData["Title"] = "Đăng nhập quản trị";
    Layout = "~/Views/AdminAuth/_Layout.cshtml";
}

<div class="admin-login-card" role="region" aria-labelledby="admin-login-heading">
    <div class="admin-login-heading">
        <span class="admin-login-pill">Access Control</span>
        <h2 id="admin-login-heading">Đăng nhập khu vực quản trị</h2>
        <p>Chỉ ví được phân quyền <strong>Admin</strong> hoặc <strong>SuperAdmin</strong> mới có thể truy cập.</p>
    </div>

    <div class="admin-login-steps" role="list">
        <div class="step-item" role="listitem">
            <span class="step-index">1</span>
            <span class="step-title">Kết nối ví</span>
            <span class="step-note">Chọn tài khoản MetaMask đã được cấp quyền.</span>
        </div>
        <div class="step-item" role="listitem">
            <span class="step-index">2</span>
            <span class="step-title">Ký nonce</span>
            <span class="step-note">Xác minh chữ ký để mở phiên bảo mật.</span>
        </div>
        <div class="step-item" role="listitem">
            <span class="step-index">3</span>
            <span class="step-title">Vào dashboard</span>
            <span class="step-note">Hệ thống chuyển hướng ngay khi hợp lệ.</span>
        </div>
    </div>

    <div class="admin-login-actions">
        <button class="btn-primary" id="btnConnect">Kết nối MetaMask</button>
        <button class="btn-outline" id="btnSign" disabled>Ký &amp; đăng nhập</button>
    </div>

    <div class="admin-login-status" id="statusPanel" role="status" aria-live="polite">
        <ion-icon name="information-circle-outline"></ion-icon>
        <span class="status-line" id="statusMessage">Chưa kết nối ví.</span>
    </div>

    <form id="antiforgeryForm" class="hidden" method="post">
        @Html.AntiForgeryToken()
    </form>

    <div class="admin-login-help">
        <strong>Gặp sự cố?</strong>
        <span>Kiểm tra mạng <em>BSC Testnet</em> và quyền Admin. Liên hệ kỹ thuật khi cần hỗ trợ thêm.</span>
    </div>
</div>

@section Styles {
    <style>
        .admin-login-card {
            display: grid;
            gap: 20px;
            color: rgba(15, 23, 42, 0.9);
            background: rgba(255, 255, 255, 0.94);
            border-radius: 18px;
            padding: 32px;
            box-shadow: 0 16px 48px rgba(15, 23, 42, 0.14);
            border: 1px solid rgba(37, 99, 235, 0.12);
            max-width: 420px;
            margin: 0 auto;
        }

        .admin-login-heading {
            display: grid;
            gap: 12px;
        }

        .admin-login-heading h2 {
            margin: 0;
            font-size: 1.85rem;
            font-weight: 800;
            color: #0f172a;
        }

        .admin-login-heading p {
            margin: 0;
            color: #475569;
            line-height: 1.5;
            font-size: 0.96rem;
        }

        .admin-login-pill {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 14px;
            border-radius: 999px;
            background: rgba(37, 99, 235, 0.15);
            color: #1d4ed8;
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.32px;
        }

        .admin-login-steps {
            display: grid;
            grid-template-columns: repeat(3, minmax(0, 1fr));
            gap: 12px;
        }

        .step-item {
            display: grid;
            gap: 6px;
            padding: 16px 14px;
            border-radius: 14px;
            background: rgba(37, 99, 235, 0.08);
            border: 1px solid rgba(37, 99, 235, 0.1);
            text-align: center;
        }

        .step-index {
            width: 28px;
            height: 28px;
            border-radius: 10px;
            background: linear-gradient(160deg, rgba(37,99,235,0.24), rgba(59,130,246,0.32));
            color: #0f172a;
            display: grid;
            place-items: center;
            font-weight: 700;
            font-size: 0.88rem;
            margin: 0 auto;
        }

        .step-title {
            font-weight: 700;
            color: #1e293b;
            font-size: 0.92rem;
        }

        .step-note {
            color: #475569;
            font-size: 0.84rem;
            line-height: 1.4;
        }

        .admin-login-actions {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .btn-primary,
        .btn-outline {
            flex: 1;
            padding: 12px 16px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.97rem;
            cursor: pointer;
            border: none;
            transition: transform 0.18s ease, box-shadow 0.18s ease, opacity 0.18s ease;
        }

        .btn-primary {
            background: linear-gradient(120deg, #2563eb 0%, #4f46e5 100%);
            color: #fff;
            box-shadow: 0 12px 35px rgba(37, 99, 235, 0.35);
        }

        .btn-primary:disabled,
        .btn-outline:disabled {
            opacity: 0.55;
            cursor: not-allowed;
            box-shadow: none;
            transform: none;
        }

        .btn-primary:not(:disabled):hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 40px rgba(59, 130, 246, 0.4);
        }

        .btn-outline {
            background: rgba(37, 99, 235, 0.08);
            color: #1d4ed8;
            border: 1px solid rgba(37, 99, 235, 0.24);
        }

        .btn-outline:not(:disabled):hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 30px rgba(37, 99, 235, 0.25);
            background: rgba(37, 99, 235, 0.14);
        }

        .admin-login-status {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 14px 16px;
            border-radius: 14px;
            background: rgba(37, 99, 235, 0.08);
            border: 1px solid rgba(37, 99, 235, 0.14);
            color: #1e293b;
            font-weight: 600;
        }

        .admin-login-status ion-icon {
            font-size: 1.4rem;
            color: #2563eb;
        }

        .status-line.error {
            color: #dc2626;
        }

        .status-line.success {
            color: #16a34a;
        }

        .admin-login-help {
            padding: 14px 16px;
            border-radius: 14px;
            background: rgba(37, 99, 235, 0.06);
            border: 1px dashed rgba(37, 99, 235, 0.24);
            color: #1e293b;
            display: grid;
            gap: 4px;
            font-size: 0.9rem;
        }
    </style>
}

@section Scripts {
    <script>
        window.__ADMIN_LOGIN_CONFIG__ = {
            nonceEndpoint: '@Url.Action("CreateNonce", "AdminAuth", new { area = string.Empty })',
            verifyEndpoint: '@Url.Action("Verify", "AdminAuth", new { area = string.Empty })',
            dashboardUrl: '@Url.Action("Index", "Dashboard", new { area = "Admin" })'
        };
    </script>
    <script src="~/js/admin-auth.js" asp-append-version="true"></script>
}
