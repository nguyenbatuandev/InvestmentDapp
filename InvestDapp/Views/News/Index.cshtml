@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // ===== HIỆU ỨNG 1: STAGGERED FADE-IN ON SCROLL =====
            const animatedElements = document.querySelectorAll('.featured-article, .article-card');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        // Thêm một độ trễ nhỏ giữa các phần tử để tạo hiệu ứng lần lượt
                        entry.target.style.transitionDelay = `${index * 100}ms`;
                        entry.target.classList.add('is-visible');
                        // Ngừng theo dõi sau khi đã hiển thị
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1 // Kích hoạt khi 10% phần tử lọt vào màn hình
            });

            animatedElements.forEach(el => {
                observer.observe(el);
            });


            // ===== HIỆU ỨNG 2: 3D TILT EFFECT ON HOVER =====
            const tiltElements = document.querySelectorAll('.featured-article, .article-card');

            tiltElements.forEach(el => {
                const maxTilt = 10; // Độ nghiêng tối đa (đơn vị: độ)

                el.addEventListener('mousemove', (e) => {
                    const rect = el.getBoundingClientRect();
                    const x = e.clientX - rect.left; // Vị trí x của chuột trong card
                    const y = e.clientY - rect.top;  // Vị trí y của chuột trong card

                    const { width, height } = rect;

                    // Tính toán độ nghiêng dựa trên vị trí chuột
                    // Khi chuột ở giữa, giá trị là 0. Càng ra rìa, giá trị càng gần +/- maxTilt
                    const tiltX = (y / height - 0.5) * -maxTilt; // Nghiêng lên xuống
                    const tiltY = (x / width - 0.5) * maxTilt;   // Nghiêng trái phải

                    // Áp dụng hiệu ứng 3D
                    el.style.transform = `perspective(1000px) rotateX(${tiltX}deg) rotateY(${tiltY}deg) scale3d(1.02, 1.02, 1.02)`;
                    el.style.transition = 'none'; // Bỏ transition khi đang di chuột để mượt hơn
                });

                el.addEventListener('mouseleave', () => {
                    // Trả về trạng thái ban đầu khi chuột rời khỏi
                    el.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)';
                    el.style.transition = 'all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)'; // Thêm lại transition
                });
            });

        });
    </script>
}

