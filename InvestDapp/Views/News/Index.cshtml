            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            margin-top: 4rem;
        }

        .page-link {
            color: var(--text-muted);
            border: 1px solid var(--secondary);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            min-width: 40px;
            text-align: center;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }

            .page-link:hover {
