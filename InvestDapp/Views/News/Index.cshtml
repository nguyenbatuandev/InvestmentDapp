        }

            .featured-article.is-visible,
            .article-card.is-visible {
                /* Trạng thái khi xuất hiện: rõ nét và về vị trí cũ */
                opacity: 1;
                transform: translateY(0);
            }

        /* 2. CSS cho hiệu ứng phóng to ảnh */
        .featured-image,
        .card-image {
            transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .featured-article-link:hover .featured-image,
        .article-card-link:hover .card-image {
            transform: scale(1.05); /* Phóng to ảnh lên 5% */
        }

        /* 3. CSS bổ sung cho hiệu ứng 3D Tilt */
        .featured-article, .article-card {
            /* Đảm bảo transition mượt mà khi chuột rời khỏi card */
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
      
        /* --- RESPONSIVE --- */
        @@media (max-width: 768px) {
            .featured-article

